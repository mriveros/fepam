<% if documentos_votapp.present? %>

  <% documentos_votapp.each do |doc| %>

    <tr>

      <td><%= doc.id %></td>
      <td><%= doc.numero%></td>
      <td><%= doc.descripcion%></td>
      <td><%= doc.fecha_emision%></td>
      <td><%= doc.tipo_resolucion%></td>
      <td><%= doc.eleccion%></td>
     </td>

      <td style="width:120px;">

        <%@documento_votapp = DocumentoVotapp.where("id =?", doc.documento_votapp_id).first%>
        
            <%if @documento_votapp.present?%> 
                          
                <%if @documento_votapp.habilitado == true || rol_administrador %>

                  <%=link_to "<i class='glyphicon glyphicon-download-alt'></i>".html_safe, (Rails.env == 'production' ? @documento_votapp.data.url : @documento_votapp.data.url), class: "btn btn-default btn-xs", target: '_blank',title: "Esta opción le permite descargar el archivo adjunto."%>

                <%end%>

            <%end%>
        
        <%#= link_to_editar_estado_ganado(estado_ganado) %>
        <%#= link_to icon_eliminar,"#", onclick: "eliminar_registro(#{estado_ganado.id});return false;", class: "btn btn-danger btn-xs", id: "btn-eliminar-estado-ganado", title: 'Haga click para eliminar el estado ganado'  %>
       

       </td>




      </td>

    </tr>

  <% end %>

<tr id="tab-paginacion">

    <td colspan="12" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate documentos_votapp, :params => params %></div></td>
</tr>

<tr>
    <td colspan="12">

      Cantidad de registros encontrados: <%= @total_encontrados %>
      
    </td>
</tr>



<% else %>

  <tr>

    <td colspan="12"><p class='none-result'>No se han encontrado resultados.</p></td>

  </tr>


<% end %>


<script type="text/javascript">

  function eliminar_registro(estado_ganado_id) {

        swal({
          title: "Confirmar",
          text: "Al confirmar se eliminará permanentemente de la lista de estados ganados",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

              $.ajax({
                url: "<%= url_for(estados_ganados_eliminar_path) %>",
                data: {id: estado_ganado_id},
                dataType: 'script'
              });

          } else{

            return false;

          }

        });


    }

</script>
