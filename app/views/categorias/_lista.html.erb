<% if categorias.present? %>

  <% categorias.each do |dc| %>

    <tr>

      <td ><%= dc.id %></td>
      <td ><%= dc.descripcion%></td>
      <td ><%= dc.nivel%></td>
      <td >
        
        <%= link_to_editar_categoria(dc) %>

        <%= link_to icon_eliminar, categorias_eliminar_path(id: dc.id), remote: true, class: "btn btn-danger btn-xs", title: 'Haga click para eliminar la Categoría', data: { confirm: "Está seguro de eliminar la Categoría?"} %>
         
       </td>

      </td>

    </tr>

  <% end %>

<tr id="tab-paginacion">

    <td colspan="12" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate categorias, :params => params %></div></td>
</tr>

<tr>
    <td colspan="12">
      Cantidad de registros encontrados: <%= @total_encontrados %> 
    </td>
</tr>

 

<% else %>

  <tr>

    <td colspan="12"><p class='none-result'>No se han encontrado resultados.</p></td>

  </tr>


<% end %>
