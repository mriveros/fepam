<% if @categoria_ok %>

   $("<div class='col-sm-12' id='msg-agregar-categoria' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-categoria");
   
  $("#form_buscar_categorias_id").val('<%= @categoria.id %>');
  $("#form_buscar_categorias_descripcion").val('');
  
  swal("Guardado Exitosamente.")
  
  setTimeout(function(){ 

  	$("#<%= params[:window_id]%>").modal('hide'); 
  	$("#form-buscar-categorias").submit(); 

  }, 1500);


<% else %>

    $("<div class='col-sm-12' id='msg-agregar-categoria' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-categoria");

<% end %>
