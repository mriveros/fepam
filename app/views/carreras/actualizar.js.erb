<% if @torneo_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-torneo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-torneo");
   
  $("#form_buscar_torneos_id").val('<%= @torneo.id %>');
  $("#form_buscar_torneos_descripcion").val('');
  $("#form_buscar_torneos_cantidad_fechas").val('');
  $("#form_buscar_torneos_fecha").val('');
  
  setTimeout(function(){

  	swal("Actualizado Exitosamente.")
  	$("#<%= params[:window_id]%>").modal('hide'); 
  	$("#form-buscar-torneos").submit(); 

  }, 1500);

