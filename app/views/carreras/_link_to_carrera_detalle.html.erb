<%= link_to icon_detalles, "#", id: "link-to-carrera-detalle-#{carrera_id}", class: 'btn btn-success btn-torneo-detalle btn-xs', title: 'Haga click aquÃ­ para ver los pilotos inscriptos.', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-carrera-detalle-<%= carrera_id %>").bind('click', function(){

    var contenido = $.trim($("#carrera-detalle-<%= carrera_id %>").html());

    $(".carrera-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='carrera-detalle-<%= carrera_id %>' class='carrera-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(carreras_carrera_detalle_path) %>',  
        data: { carrera_id: <%= carrera_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>