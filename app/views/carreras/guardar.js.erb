<% if @carrera_ok %>

   $("<div class='col-sm-12' id='msg-agregar-carrera' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-carrera");
   
  $("#form_buscar_carreras_id").val('<%= @carrera.id %>');
  $("#form_buscar_carreras_inscripcion").val('');
  $("#form_buscar_carreras_fecha_inicio_inscripcion").val('');
  $("#form_buscar_carreras_torneo").val('');
  $("#form_buscar_carreras_categoria_id").val('');
  $("#form_buscar_carreras_estado_carrera_id").val('');
  
  swal("Carrera habilitada exitosamente.")
  
  setTimeout(function(){ 

  	$("#<%= params[:window_id]%>").modal('hide'); 
  	$("#form-buscar-carreras").submit(); 

  }, 1500);
 

<% else %>

    $("<div class='col-sm-12' id='msg-agregar-carrera' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-carrera");
    swal("La carrera no pudo ser iniciada. Verifique las inscripciones");
    
<% end %>
