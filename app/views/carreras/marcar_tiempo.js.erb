<% if @tiempo_marcado_ok %>

   $("<div class='col-sm-12' id='msg-marcar-tiempo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Tiempo marcardo.</div>").insertBefore("#table-carrera-detalle");
   
    setTimeout(

      function(){ $("#msg-marcar-tiempo").remove(); 
     
      $("#link-to-carrera-detalle-<%= @carrera_detalle.carrera_id%>").trigger('click');
      $("#link-to-carrera-detalle-<%= @carrera_detalle.carrera_id%>").trigger('click');
      
       swal("Tiempo marcado exitosamente");

    }, 1000);
   
    
<% else %>

  $("<div class='col-sm-12' id='msg-marcar-tiempo' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'>Error al marcar el Tiempo</div>").insertBefore("#table-carrera-detalle");
  setTimeout(function(){ 
    
    $("#msg-marcar-tiempo").remove();

    swal("No es posible marcar el tiempo.")

     }, 2000);
    
<% end %>