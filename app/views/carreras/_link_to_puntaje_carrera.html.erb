<%= link_to icon_ok_sign, "#", id: "link-to-puntaje-carrera-#{carrera_id}", class: 'btn btn-success btn-puntaje-carrera btn-xs', title: 'Haga click aquÃ­ para ver los puntajes de los Pilotos.', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-puntaje-carrera-<%= carrera_id %>").bind('click', function(){

    var contenido = $.trim($("#puntaje-carrera-<%= carrera_id %>").html());

    $(".puntaje-carrera").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='puntaje-carrera-<%= carrera_id %>' class='puntaje-carrera'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(carreras_puntaje_carrera_path) %>',  
        data: { carrera_id: <%= carrera_id %>},
        dataType: 'script'
         
      })

    }
    
    return false;
  })

</script>