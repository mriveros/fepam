
<div class="modal-dialog" style="text-align:left;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Votante</h4>
      
    </div>

    <%= form_for @votante, remote: true, url: votantes_actualizar_url, html: { id: "form-editar-votante" }, method: 'POST' do |f| %>

      <%= f.hidden_field :id %>
      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

           <div class="col-sm-4"><%= f.label :cedula, "Cédula #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :cedula, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag :nil, "Nombre #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= f.text_field :nombres, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag :nil, "Apellido #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= f.text_field :apellidos, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag :nil, "Dirección #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= f.text_field :direccion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag :nil, "Partido #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= f.text_field :partido, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag :nil, "Seccional #{attr_requerido}".html_safe, id: "lbl-seccional" %></div>
          <div class="col-sm-7"><%= f.collection_select :seccional_id,  Seccional.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>
          <div class="col-sm-1"></div><br /><br />
          
          <div class="col-sm-4"><%= label_tag :nil, "Departamento #{attr_requerido}".html_safe, id: "lbl-seccional" %></div>
          <div class="col-sm-7"><%= f.collection_select :departamento_id,  Departamento.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>

      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-votante" %>          
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  #form-editar-votante label, #form-editar-votante input[type='text'], #form-editar-votante select { float:left; margin-top:5px;}
  #form-editar-votante br {clear:both; }
  #form-editar-votante label { width:200px;font-size:12px;margin-top:10px;}


</style>

<script type="text/javascript">
  aplicar_datepicker2();
</script>
