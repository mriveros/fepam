<%= link_to icon_detalles, "#", id: "link-to-torneo-detalle-#{torneo_id}", class: 'btn btn-success btn-torneo-detalle btn-xs', title: 'Haga click aquÃ­ para ver las fechas del campeonato.', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-torneo-detalle-<%= torneo_id %>").bind('click', function(){

    var contenido = $.trim($("#torneo-detalle-<%= torneo_id %>").html());

    $(".torneo-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='torneo-detalle-<%= torneo_id %>' class='torneo-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(torneos_torneo_detalle_path) %>',  
        data: { torneo_id: <%= torneo_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>