
<%= javascript_include_tag "sweetalert.min" %>
<%= stylesheet_link_tag "sweetalert" %>
<div>

  <div class="col-sm-12" style="border-bottom: 2px solid #b6b6b6;margin-bottom:5px;padding:0px;">
    <h3 style="float:left;margin-top:5px;">Registros de Votos</h3>
    <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> Registrar Voto".html_safe, "#", id: "link-to-agregar-registro-voto", class: "btn btn-primary pull-right", style: "float:right;margin-left:10px;", onclick: "$('.modal').html('');return false;" %>
    <%= modal_window( window_id: "modal-window-agregar-registro-voto", link_to_id: "#link-to-agregar-registro-voto", url: registros_votos_agregar_path( window_id: "modal-window-agregar-registro-voto") )%>
    
  </div>
</div>

<div style="clear:both;"></div>
 
<div class="table-responsive" id="table-registros-votos">

  <table class="table table-small-font table-bordered table-striped" style="font-size:11px;">
   
    <thead>

      <%= form_tag registros_votos_lista_path, remote: true, id: "form-buscar-registros-votos"  do  %>

        <tr>

          <th style="width:20px;">
            <span>ID</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_registros_votos_id, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th style="width:130px;">
              <span>Elección</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_registros_votos, :eleccion_id, Eleccion.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_eleccion_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>
          
          <th>
            <div><%= label_tag nil, "Fecha".html_safe %></div>
              <div class='input-group date'>
                <%= text_field_tag :form_buscar_registros_votos_fecha_registro, nil, class: 'form-control input-sm' %>
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_fecha_registro');"><i class="fa fa-times"></i></span>
              </div>
         </th>

          <th style="width:120px;">
            <span>Cédula<br/> <em style="font-size: 7px;"></em></span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_registros_votos_cedula, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_cedula');"><i class="fa fa-times"></i></span>
            </div>
            
          </th>

          <th style="width:120px;">
            <span>Nombres</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_registros_votos_nombre, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_nombre');"><i class="fa fa-times"></i></span>
            </div>
            <em class="nmb"></em>
          </th>

          <th style="width:120px;">
            <span>Apellidos</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_registros_votos_apellido, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_apellido');"><i class="fa fa-times"></i></span>
            </div>
            <em class="nmb"></em>
          </th>


          <th style="width:120px;">
            <span>Partido</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_registros_votos_partido, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_partido');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th style="width:130px;">
              <span>Seccional</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_registros_votos, :seccional_id, Seccional.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_seccional_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>


          <th style="width:130px;">
              <span>Departamento</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_registros_votos, :departamento_id, Departamento.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_departamento_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 

          <th style="width:120px;">
            <span>Usuario</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_registros_votos_usuario_insercion, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_usuario_insercion');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th style="width:130px;">
            <span>Voto Candidato</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_registros_votos, :voto_candidato_id, SeleccionVoto.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-registros-votos', '#form_buscar_registros_votos_voto_candidato_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 


          <th style="width:150px;"></th>

        </tr>

        <% end %>

      </thead> 

    <tbody id="registros-votos-lista"></tbody>
  
  </table>

</div>


<script type="text/javascript">

  //---------------------------- RECUPERANDO DATOS ----------------------------//
  $("#form-buscar-registros-votos").bind("submit", function () {
    var valido = true;
    if($("#form_buscar_registros_votos_nombre").val().length !== 0 ){
      valido = false;
      if(($("#form_buscar_registros_votos_nombre").val().replace(/\s/g,'')).length > 2 && ($("#form_buscar_registros_votos_apellido").val().replace(/\s/g,'')).length > 2){        
        valido = true;
      }else{
        valido = false;
        //swal("Para la búsqueda por Nombre y Apellido Ingrese minimo 3(tres) carácteres en cada caja de texto", "", "error");         
        $(".nmb").html('*Ingrese minimo 3(tres) carácteres para cada caja de texto');
        $(".nmb").attr({'style':'color: red;font-size: 8px;'});      
      }      
    }
      
    if(valido){
    $(".nmb").html('');       
    $("#registros-votos-lista").html("<%= escape_javascript("<tr><td colspan='9' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}</td></tr>").html_safe %>")      
    }

    

  })
 
  //---------------------------------------------------------------------------//
  //---------------------------- BUSCAR PERSONAS-------- -------------------------//
  $("#table-registros-votos input, #table-registros-votos select").bind('change', function () {
      $.ajaxQ.abortAll();
      $("#form-buscar-registros-votos").submit();

  })
  //----------------------------------------------------------------------------//
  //----------------------------INICIO -----------------------------------------//
  aplicar_datepicker();
  $("#form-buscar-registros-votos").submit();
  <% if params[:agregar] %>
    $("#link-to-agregar-votante").trigger('click');
  <% end %>
  //----------------------------------------------------------------------------//
</script>

<style>
    /*INTRO.JS*/
    .introjs-helperNumberLayer{
        width: 23px;
        height: 23px;
        padding: 0px;
    }

    #start-tour{
        cursor: pointer;
    }

    #form-buscar-registros-votos table th { background:#e6e6e6;}
    #form-buscar-registros-votos table th span.limpiar { background:#fff;}

</style>
